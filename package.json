{
  "name": "cmdletsandcoffee.github.io",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm run build:themes && astro dev",
    "start": "pnpm run build:themes && astro dev",
    "build": "pnpm run astro check && astro build",
    "check": "pnpm run build:themes && astro check",
    "preview": "pnpm run build:themes && astro preview",
    "astro": "astro",
    "build:themes": "node ./src/utils/buildThemes.mjs",
    "nuke": "rm -rf .astro && rm -rf node_modules -v && pnpm i && pnpm run build:themes && astro dev",
    "lint": "pnpm run lint:prettier && pnpm run lint:eslint && pnpm run check",
    "lint:editorconfig": "editorconfig-checker",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "format": "prettier --write .",
    "lint:eslint:fix": "eslint . --fix",
    "fix": "pnpm run format && pnpm run lint:eslint:fix",
    "sluggify": "node src/utils/sluggify.mjs"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@iconify-json/eos-icons": "^1.2.4",
    "@iconify-json/ri": "^1.2.5",
    "@tailwindcss/typography": "^0.5.19",
    "astro": "^5.14.1",
    "astro-icon": "^1.1.5",
    "astro-robots-txt": "^1.0.0",
    "chalk": "^5.6.2",
    "esbuild": "^0.25.10",
    "globals": "^15.15.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "shiki": "^3.13.0",
    "slug": "^11.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "editorconfig-checker": "^6.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.44.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,json,md,mdx,yml,yaml}": "prettier",
    "*.{js,jsx,ts,tsx,astro}": "eslint",
    "*.astro": "astro check"
  }
}
