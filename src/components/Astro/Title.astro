---
/* Component for rendering page titles with optional logo.
 *
 * Props:
 * - title: string - Main title text
 * - showTitleBackground: boolean - Enable background styling
 * - logoImg?: ImageMetadata - Optional logo image
 * - class?: string - Additional CSS classes
 *
 * Example usage:
 * <Title
 *   title="Welcome to Our Site"
 *   showTitleBackground={true}
 *   logoImg={import("@assets/logo.png")}
 *   class="my-title"
 * />
 *
 * Notes:
 * - Two visual style variants
 * - Optimized logo display
 * - Responsive layout
 * - Theme-based borders
 * - Flexible width
 */

import type { ImageMetadata } from "astro";

import { Image } from "astro:assets";
import PatternBackground from "./utils/PatternBackground.astro";

interface Props {
  // Main title text //
  title: string;
  // Controls the title's visual style and background //
  showTitleBackground: boolean;
  // Optional path to logo image //
  logoImg?: ImageMetadata;
  // force logo on mobile //
  forceLogoOnMobile?: boolean;
  // Optional CSS classes //
  class?: string | undefined;
}

const { title, showTitleBackground, class: className, logoImg, forceLogoOnMobile } = Astro.props;

const options = {
  "rounded-theme": true,
};
---

<div
  class:list={[
    "my-0 flex border-b-8 border-t-8 py-0 relative",
    {
      "border-none": !showTitleBackground,
      "border-theme-secondary": showTitleBackground,
    },
    options,
    // "rounded-t-none",
  ]}
>
  {showTitleBackground && <PatternBackground pattern={"circuit"} />}
  <div class="my-0 flex w-full flex-row items-center justify-center">
    <h1
      class:list={[
        "mx-0 w-full py-0",
        {
          "is-title-alt py-5 text-center leading-none": showTitleBackground,
          "is-title p-0": !showTitleBackground,
        },
        className,
      ]}
    >
      {!logoImg && title}

      {
        logoImg && (
          <span class="flex w-full items-center justify-center">
            <span
              class:list={[
                "border-theme-accent ml-4 overflow-hidden rounded-full border-2 sm:ml-0 sm:mr-6 sm:inline-block",
                { hidden: !forceLogoOnMobile },
              ]}
            >
              <Image src={logoImg} alt="Logo" width={64} height={64} class="w-full" />
            </span>
            {title}
          </span>
        )
      }
    </h1>
  </div>
</div>
